{
  "include": [
    "./src/**/*.js",
    "./tests/**/*.js"
  ],
	"compilerOptions": {
    "rootDirs": ["."],
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "5.0",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "moduleResolution": "node",
    "module": "esnext",
    "preserveValueImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
    "target": "esnext"
	}
}
